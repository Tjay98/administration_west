<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pages.FinalizarCompraActivity"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/compra_finalizada"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Informação do Cliente" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Informação de Entrega" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVNomeEntrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Nome do Cliente" />

        <TextView
            android:id="@+id/tVNomeEntregaFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Cliente" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVTelemovelEntrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Número de Telemóvel" />

        <TextView
            android:id="@+id/tVTelemovelEntregaFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Telemóvel" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVMoradaEntrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Morada de Entrega" />

        <TextView
            android:id="@+id/tVMoradaEntregaFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morada de Entrega" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVCodigoPostalEntrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Código Postal" />
        <TextView
            android:id="@+id/tVCodigoPostalEntregaFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código Postal" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Informação de Faturação" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVNomeFaturacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Nome Cliente" />

        <TextView
            android:id="@+id/tVNomeFaturacaoFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nome Cliente" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVTelemovelFaturacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Número Telemóvel" />

        <TextView
            android:id="@+id/tVTelemovelFaturacaoFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número Telemóvel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVMoradaFaturacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Morada de Faturação" />

        <TextView
            android:id="@+id/tVMoradaFaturacaoFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morada de Faturação" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVCodigoPostalFaturacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Código Postal" />

        <TextView
            android:id="@+id/tVCodigoPostalFaturacaoFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código Postal" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Informação da Compra" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVPagamentoN"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:text="Método de Pagamento" />

        <TextView
            android:id="@+id/tVPagamentoFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Método de Pagamento" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/finalizar_compra" />

    <Button
        android:id="@+id/buttonVoltarBillingAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:text="@string/menu_principal"
        android:textColor="@color/secondblue" />


</LinearLayout>