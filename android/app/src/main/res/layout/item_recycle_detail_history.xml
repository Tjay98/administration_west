<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/produto"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tVNomeProdutoItemDetailsHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome produto"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVQProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/quant"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tVQuantidadeProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVPProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Preço"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tVPrecoProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVIProdutoItemDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="IVA"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tVIVAProdutoIteDetailsHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA"
            android:textSize="20sp"/>


    </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>