<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutProducts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/product_recycle_view_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivProductImageGrid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        app:srcCompat="@drawable/sem_imagem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductNameGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/nome_produto"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPriceNameGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="5dp"
            android:text="PreÃ§o"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>