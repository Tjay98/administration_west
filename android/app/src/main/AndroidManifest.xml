<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.administration_west">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_adm_west_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Administration_west">
        <activity android:name=".Pages.DetailsHistoryActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"
        />

        <activity android:name=".Pages.ChangePasswordActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Pages.DetailsProductsActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Pages.DetailsCompaniesActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.FinalizarCompraActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.PagamentoActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.ShippingAddressActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.BillingAddressActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Pages.CartActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.MainActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name=".Pages.RegisterActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".Pages.LoginActivity"
            android:theme="@style/Theme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>